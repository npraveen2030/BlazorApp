@page "/projectleadportal"

@using BlazorApp.Models.Dtos
@using Microsoft.AspNetCore.Components.Rendering
@rendermode InteractiveServer

<!-- Modal to Add Association -->
<div class="modal fade" id="AddAssociationModal" tabindex="-1" aria-labelledby="AssociationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="AddAssociationModal">Assoiation Details</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@AddAssociationForm" OnValidSubmit="AddAssociationSubmitHandler" class="p-3">
                    <!-- User Selection -->
                    <div class="row mb-3 align-items-center ">
                        <div class="col-auto">
                            <label for="User" class="col-form-label">Select a User:</label>
                        </div>
                        <div class="col-auto">
                            <select id="User" @bind="UserId_BindValue" class="form-select" style="width: 250px; height: 40px;">
                                <option value="0">-- Select --</option>
                                @if (ActiveUsers is not null)
                                {
                                    @foreach (var user in ActiveUsers)
                                    {
                                        <option value="@user.UserId">@user.UserName</option>
                                    }
                                }
                                else
                                {
                                    <option value="">No Users Found</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Project Selection -->
                    <div class="row mb-3 align-items-center">
                        <div class="col-auto">
                            <label for="Role" class="col-form-label">Select a Role:</label>
                        </div>
                        <div class="col-auto">
                            <select id="Role" @bind="AddAssociationForm.RoleId" class="form-select" style="width: 250px; height: 40px;">
                                <option value="0">-- Select --</option>
                                @if (AvailableRoles is not null)
                                {
                                    @foreach (var role in AvailableRoles)
                                    {
                                        <option value="@role.RoleId">@role.RoleName</option>
                                    }
                                }
                                else
                                {
                                    <option value="">Select User</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Add Association</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<RadzenDataGrid Data="@Associations" TItem="UserAssociatedProjectsDto"> 
    <HeaderTemplate> 
        <RadzenButton Text="Add Association" Click="HandleAddAssociation" Icon="add_circle" /> 
    </HeaderTemplate> 
    <Columns> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="UserName" Title="UserName" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="ProjectName" Title="ProjectName" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="RoleId" Title="RoleId" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="CreatedDate" Title="CreatedDate" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="CreatedBy" Title="CreatedBy" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="ModifiedDate" Title="ModifiedDate" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="ModifiedBy" Title="ModifiedBy" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Property="IsActive" Title="IsActive" /> 
        <RadzenDataGridColumn TItem="UserAssociatedProjectsDto" Title="Actions"> 
            <Template Context="association"> 
                @if (association.IsActive) 
                { 
                    <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Size="ButtonSize.Small" 
                                  Click="@(() => DeleteAssociation(association))" /> 
                } 
            </Template> 
        </RadzenDataGridColumn> 
    </Columns> 
</RadzenDataGrid> 

