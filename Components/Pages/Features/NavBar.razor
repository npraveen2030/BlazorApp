@rendermode @(new InteractiveServerRenderMode(prerender: false))

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-center text-center gap-3">
            <h1 class="mb-0 fs-3">@Title</h1>
            <a class="navbar-brand m-0 fs-3" href="#">
                <img src="/images/home(green).png"
                class="img-fluid icon-custom"
                style="width:2rem;height:2rem" />
            </a>
        </div>

        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 d-flex align-items-center gap-3">
            <li class="nav-item text-light">
                @UserName
            </li>

            @if (!string.IsNullOrWhiteSpace(UserProject))
            { 
                <li class="nav-item text-light">
                    @UserProject
                </li>
            }

            @if (UserRoles.Count() != 0)
            {    
                <li class="nav-item dropdown">

                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Dropdown
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg-end dropdown-menu-dark" aria-labelledby="navbarDropdown">
                        @if (UserRoles.Contains("1"))
                        {
                            <li><a class="dropdown-item" href="/admin">Admin Portal</a></li>
                        }
                        @if (UserRoles.Contains("11"))
                        {
                            <li><a class="dropdown-item" href="/projectmanagerportal">PM Portal</a></li>
                        }
                        @if (UserRoles.Contains("12"))
                        {
                            <li><a class="dropdown-item" href="/projectleadportal">PL Portal</a></li>
                        }
                    </ul>
                </li>
            }

            <li class="nav-item">
                <Logout />
            </li>

            <li class="nav-item">
                <ThemeToggler />
            </li>

        </ul>
    </div>
</nav>