<div class="d-inline-block p-3" style="min-width: 100px;">
    <div class="mb-2">
        <select class="form-select form-select-sm" style="max-width: 200px;">
            <option>Yes</option>
            <option>No</option>
        </select>
    </div>
    <div class="mb-2">
        <input class="form-control form-control-sm" @bind="Details.ProductName" readonly style="max-width: 200px;" />
    </div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.AccountNumber" readonly style="max-width: 200px;" /></div>
    <div class="mb-2 pt-1"><input class="form-check-input" type="checkbox" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.AverageCollectedBalance" style="max-width: 150px;" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.CampaignId" style="max-width: 150px;" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.StandardInterestRate" readonly style="max-width: 150px;" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.AnnualizedStandardIneterestExpense" readonly style="max-width: 150px;" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.CurrentInteresetRate" readonly style="max-width: 150px;" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.AnnualizedCurrentInteresetExpense" readonly style="max-width: 150px;" /></div>
    <div class="mb-2">
        <select class="form-select form-select-sm" @bind="Details.FloatingId" style="max-width: 150px;">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
    </div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.FloatingRate" style="max-width: 150px;" /></div>
    <div class="mb-2 d-flex">
        <select class="form-select form-select-sm me-1" style="width: 75px;">
            <option>Rate</option>
            <option>Amount</option>
        </select>
        <input class="form-control form-control-sm" @bind="Details.BonusId" style="width: 75px;" />
    </div>
    <div class="mb-2"><input type="date" class="form-control form-control-sm" @bind="Details.AppliedInterestExpires" style="max-width: 150px;" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.AppliedInterestRate" readonly style="max-width: 150px;" /></div>
    <div class="mb-2"><input class="form-control form-control-sm" @bind="Details.AnnualizedInterestExpense" readonly style="max-width: 150px;" /></div>
    <div class="mb-2">
        <button class="btn btn-sm btn-primary me-2" @onclick="HandleDeleteEI">Delete Exception Interest</button>
    </div>
</div>
